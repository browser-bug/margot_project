<application name="mini_app" out_file="log.distance.data" block="distance">

	<!-- Input parameters -->
	<flag value="--iterations 101"/>
	<flag value="--molecule 1000"/>
	<flag value="--ligand 1000"/>

	<!-- Application knobs -->
	<parameter name="version_distance"    start_value="0"     stop_value="4"            flag="--distance_version"     type="int"/>
	<parameter name="version_overlap"     start_value="0"     stop_value="4"            flag="--version_overlap"      type="int"/>
	<parameter name="skip_factor"         start_value="1"     stop_value="5"  step="1"  flag="--skip_factor"            type="int"/>

	<!-- Metric of interest -->
	<metric name="exec_time"    field="avg_exec_time"   />
	<metric name="frequency"    field="avg_frequency"   />
	<metric name="temperature"  field="avg_temperature" />
	<metric name="throughput"   field="avg_throughput"  />
</application>
