<?xml version="1.0"?>

<scenario>


	<!-- Stereomatch application based on opencv and opencl-->
	<application name="Stereomatch">
		<executable path="/home/aleck/progetti/workspace/plaunch/execs/stereomatch-opencl" />
		<arguments>
			<opt name='platform' value="2" />
			<opt name='type' value="1" />
			<opt name='iteration_number' value="100" />
			<opt name='gear' value="1" />
		</arguments>
		<dependency>
			<folder path="/home/aleck/progetti/workspace/ocl-stereo-opencv/dataset" dest="dataset"/>
			<file   path="/home/aleck/progetti/workspace/ocl-stereo-opencv/ann-predicotor.net" dest=""/>
		</dependency>
		<log>
			<!-- <extension value=".log" /> -->
			<file value="stdout.txt" />
		</log>
	</application>




	<schedule>
		<run application="Stereomatch" delay="1">
			<opt name='id' value="0" />
		</run>
		<run application="Stereomatch" delay="5">
			<opt name='id' value="1" />
		</run>
		<run application="Stereomatch" delay="10">
			<opt name='id' value="2" />
		</run>
